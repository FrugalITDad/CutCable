<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.cutcablewizard"
       name="CutCable Wizard"
       version="1.0.0"
       provider-name="FrugalITDad"
       platform="all"
       extension=""
       summary="Installer and Wizard for CutCable builds"
       description="Manages CutCable builds, first-run setup, and auto-updates"
       type="xbmc.python">

    <!-- Python module info -->
    <extension point="xbmc.python.module">
        <import addon="xbmc" version="1.0.0"/>
    </extension>

    <!-- Optional: Program add-on metadata -->
    <extension point="xbmc.addon.metadata">
        <summary lang="en">CutCable Wizard for Kodi</summary>
        <description lang="en">Installs and manages CutCable builds, including first-run setup and automatic updates.</description>
        <platform>all</platform>
    </extension>

    <!-- Optional: Add-on icon/fanart -->
    <extension point="xbmc.addon.metadata">
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </extension>

</addon>
