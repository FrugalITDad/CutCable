<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="repository.frugalitdad" name="FrugalITDad Repository" version="1.0.0" provider-name="FrugalITDad">
        <extension point="xbmc.addon.repository" name="FrugalITDad Repository">
            <dir>
                <info compressed="false">https://frugalitdad.github.io/CutCable/addons.xml</info>
                <checksum>https://frugalitdad.github.io/CutCable/addons.xml.md5</checksum>
                <datadir zip="true">https://frugalitdad.github.io/CutCable/zips/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Addons to make family and friends life easier</summary>
            <description>FrugalITDad Repository - Addons to make family and friends life easier. Features the CutCable Wizard and other helpful tools for entertainment and productivity.</description>
            <platform>all</platform>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>
    <addon id="plugin.program.cutcable.wizard" name="CutCable Wizard" version="1.0.0" provider-name="FrugalITDad">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>executable</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>CutCable Wizard - Cut the cord with ease</summary>
            <description>Provides builds for friends and family to cut cable and enjoy entertainment. Easy-to-use wizard for setting up your Kodi installation with everything you need for cord-cutting.</description>
            <disclaimer>This addon is for educational purposes only. Users are responsible for complying with all applicable laws.</disclaimer>
            <platform>all</platform>
            <language>en</language>
            <license>GPL-2.0-only</license>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>
</addons>
